{
  "name": "asciidoctor-gettext",
  "version": "1.0.2",
  "description": "gettext/po string extraction tool for asciidoc documents",
  "keywords": [
    "adoc",
    "asciidoc",
    "asciidoctor",
    "asciidoctor.js",
    "gettext",
    "i18n",
    "internationalization",
    "localization",
    "po",
    "po4a",
    "translation"
  ],
  "homepage": "https://github.com/martijnthe/asciidoctor-gettext",
  "repository": "github:martijnthe/asciidoctor-gettext",
  "main": "dist/index.js",
  "author": "post@martijnthe.nl",
  "license": "MIT",
  "bin": {
    "asciidoctor-gettext": "bin/asciidoctor-gettext.js"
  },
  "dependencies": {
    "asciidoctor.js": "1.5.6-preview.5",
    "commander": "^2.15.1",
    "gettext-parser": "^1.3.1"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.7",
    "@types/tmp": "^0.0.33",
    "coveralls": "^3.0.0",
    "jest": "^22.4.2",
    "tmp": "^0.0.33",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.2"
  },
  "files": [
    "bin/*",
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "coveralls:upload": "cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -p .",
    "prepare": "tsc",
    "test": "jest --collectCoverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": false,
        "tsConfigFile": "tsconfig-ts-jest.json"
      }
    }
  }
}
