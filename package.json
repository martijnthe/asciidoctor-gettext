{
  "name": "asciidoctor-gettext",
  "version": "1.0.0",
  "description": "gettext/po string extraction tool for asciidoc documents",
  "main": "index.js",
  "author": "post@martijnthe.nl",
  "license": "MIT",
  "dependencies": {
    "asciidoctor.js": "^1.5.6-preview.5",
    "gettext-parser": "^1.3.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.7",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "lint": "tslint -p .",
    "prepare": "tsc",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": false,
        "tsConfigFile": "tsconfig-ts-jest.json"
      }
    }
  }
}
