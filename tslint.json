{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-standard"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "indent": [true, "spaces", 2],
        "semicolon": [true, "always"],
        "space-before-function-paren": [true, {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}]
    },
    "rulesDirectory": []
}
